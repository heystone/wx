page{
  height: 100%;
}
.container{
  display: flex;
  width: 100%;
  height:70%;
  text-align: center;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content: space-around;
  background-color: blue;
  align-content: space-around;
}
.ninelayout{
  width: 30%;
  height: 30%;
  background-color: red;
  transform-style: preserve-3d;
}
.reverseCard{
  transform: rotateY(180deg);
  transition: all 2s;
}
.back{
  background: green;
  backface-visibility: visible;
  transform: rotateY(180deg);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.front{
  backface-visibility: hidden;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}